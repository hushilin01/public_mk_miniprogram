.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.modal_box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fff;
  margin: -150rpx 12% 0 12%;
  border-radius: 3rpx;
}

.title {
  padding: 15rpx;
  margin-top: 20rpx;
  text-align: center;
  background-color: gazure;
  color: #000;
  font-weight: bold;
}

.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.input_show1 {
  margin: 0 auto;
  width: 80%;
  margin-left: 10%;
  font-size: 32rpx;
  text-align: center;
}

.btn1 {
  border-top: 1rpx solid #d0d0d0;
  padding: 0;
  width: 100%;
  margin-top: 65rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}

.cancel {
  flex: 1;
  text-align: center;
  color: black;
  box-sizing: border-box;
  display: block;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 32rpx;
}

.Sure {
  display: block;
  flex: 1;
  box-sizing: border-box;
  font-size: 32rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  color: #44b549;
  padding-left: 0;
  padding-right: 0;
  background-color: white;
  border: none;
  border-radius: 0;
  text-align: center;
  border-left: 1rpx solid #d0d0d0;
}

.Sure::after {
  border: none;
  border-radius: 0;
}

.Sure:focus {
  background-color: #ffff;
}

.modalMsg {
  text-align: center;
  margin-top: 35rpx;
  display: block;
  font-size: 32rpx;
  color: #ccc;
}
